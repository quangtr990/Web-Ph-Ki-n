
@{
    ViewBag.Title = "Index";

}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<style>
    .form-control:focus {
        border-color: #03ff00;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
    .chat-box {
        border: 3px solid;
        border-color: rgba(128, 128, 128, 0.5);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease;
    }
    #btnThucHien:hover {
        color: white !important;
        background-color: #6b6666 !important;
    }

</style> 
<div class="container">
    @using (Html.BeginForm("Index","IntelligentProblemSolving", FormMethod.Post))
    {
        <div class="container">
            <div class="header">
                <h1 class="text-center">GIẢI BÀI TẬP VẬT LÝ 12 <br> CHƯƠNG 6 ÁNH SÁNG LƯỢNG TỬ</h1>
            </div>

            <div class="form-container">
                <h2 class="text-center mx-auto bg-primary bg-gradient text-white w-50">Nhập Yêu Cầu</h2>
                <hr />
                <form class="bg-warning">
                    <div class="form-group text-center">
                        <label for="GIATHIET_H">Nhập vào giả thiết</label>
                        <input type="text" id="GIATHIET_H" name="GIATHIET_H" value="@ViewData["GIATHIET_H"]" class="form-control rounded-input mx-auto" />
                    </div>
                    <div class="form-group text-center">
                        <label for="KETLUAN_G">Nhập yêu cầu cần tính</label>
                        <input type="text" id="KETLUAN_G" name="KETLUAN_G" value="@ViewData["KETLUAN_G"]" class="form-control rounded-input mx-auto" />
                    </div>
                    <div class="text-center p-3">
                        <input class="btn btn-custom bg-gradient bg-black text-white-50" id="btnThucHien" type="submit" value="Giải đáp" />
                    </div>
                </form>
            </div>

            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="chat-box">
                            <div class="chat-content form-text bg-gradient bg-success text-white rounded-3 text-center">
                                    @Html.Raw(ViewData["KETQUAXULY"])
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

